{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    /* Tailwind */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Fix Swiper */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["swiper"]
  }
}
